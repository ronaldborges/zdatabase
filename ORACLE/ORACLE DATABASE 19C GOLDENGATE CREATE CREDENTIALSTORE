#CONFIGURE TNSNAMES.ORA FILE 
cat /u01/app/oracle/product/19.3.0/dbhome_1/network/admin/tnsnames.ora
appspdb =
  (DESCRIPTION =
    (ADDRESS_LIST =
      (ADDRESS = (PROTOCOL = TCP)(HOST = 10.5.150.157)(PORT = 1521))
    )
    (CONNECT_DATA =
      (SERVICE_NAME = appspdb)
    )
  )

